<form class="form-signin" method="post">
  {{#each errorMessages}}
  <div class="alert alert-danger">
    {{this.msg}}
  </div>
  {{/each}}
  <h2 class="form-signin-heading text-center">New Account</h2>
  <br>
  <input type="text" name="name" placeholder="Name" require="" autofocus="" class="form-control">
  <br>
  <input type="email" name="email" placeholder="email" require="" autofocus="" class="form-control">
  <br>
  <input type="password" name="password" placeholder="password" require="" class="form-control">
  <br>
  <input type="password" name="confirmPassword" placeholder="ConfirmPassword" require="" class="form-control">
  <br>
  <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up</button>
  <br>
  <h4 class="text-center">Or</h4>
  <br>
  <a href="/auth/facebook" class="btn btn-lg btn-success btn-block">Sign Up with Facebook</a>
</form>